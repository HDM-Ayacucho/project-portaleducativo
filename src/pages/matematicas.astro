---
import Layout from "../layouts/Layout.astro"
---

<Layout title="matematica">
    
<div class="flex justify-center items-center h-screen bg-yellow-200">
    <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-2xl font-bold mb-4">¿Cuál es el número 5?</h2>
      <div class="grid grid-cols-3 gap-4">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">3</button>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">5</button>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">8</button>
      </div>
    </div>
  </div>
</Layout>